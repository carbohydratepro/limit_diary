<div class="container">
  <h1 class="h3 mb-3 font-weight-normal">Log in</h1>
  <div class="mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Name"%>
      </div>

      <div class="field mb-3">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.check_box :remember_me, class: "checkbox"%>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-3">
        <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-bloc"%>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
  
